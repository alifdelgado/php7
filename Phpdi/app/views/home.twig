{% extends 'layout.twig' %}
{% block content %}
    <h3 class="text-center text-teal-700 text-3xl mt-5">Artículos</h3>
    <ul class="w-1/2 m-auto flex flex-col justify-center shadow rounded p-5 divide-y divide-teal-400">
        {% for article in articles %}
            <li class="flex p-3">
                <div class="w-20 h-20 bg-gray-400 rounded-full"></div>
                <div class="ml-5">
                    <span class="font-bold uppercase text-teal-600">{{ article.getTitle() }}</span>
                    <p class="text-teal-500">{{ article.getContent() }}</p>
                    <a href="/articulo/{{ article.getId() }}" class="text-teal-500 hover:text-teal-700">Leer más</a>
                </div>
            </li>
        {% endfor %}
    </ul>
{% endblock %}